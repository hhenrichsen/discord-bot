{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "target": "ES2019",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts", "src/**/*.js"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}